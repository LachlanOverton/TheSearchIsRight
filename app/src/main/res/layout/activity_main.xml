<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.thesearchisright.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:text="The Search Is Right"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animals"
        android:id="@+id/btnAnimals"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textSize="24dp"
        style="@style/AppTheme.Button"
        android:textColor="@color/colorBlue"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Research"
        android:id="@+id/btnResearch"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btnAnimals"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        style="@style/AppTheme.Button"
        android:textColor="@color/colorBlue" />

    <Button
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countries"
        android:id="@+id/btnCountries"
        android:textSize="24dp"
        android:textColor="@color/colorBlue"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Companies"
        android:id="@+id/btnCompanies"
        android:layout_marginTop="24dp"
        android:textSize="24dp"
        android:textColor="@color/colorBlue"
        android:layout_below="@+id/btnCountries"
        android:layout_centerHorizontal="true" />

   <!-- <Button
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People"
        android:id="@+id/btnPeople"
        android:layout_marginTop="24dp"
        android:textSize="24dp"
        android:textColor="@color/colorBlue"
        android:layout_below="@+id/btnCompanies"
        android:layout_centerHorizontal="true" />
!-->
</RelativeLayout>
